# ==============================================================================
# Zambezi Meats - Production Environment Configuration
# ==============================================================================
# DEP-009: Configure environment variables
# .env file with production credentials (DB, API keys, etc.)
# ==============================================================================
#
# IMPORTANT: Copy this file to .env and update values before deployment
# NEVER commit the actual .env file to version control
#
# ==============================================================================

APP_NAME="Zambezi Meats"
APP_ENV=production
APP_KEY=base64:GENERATE_WITH_php_artisan_key:generate
APP_DEBUG=false
APP_TIMEZONE=Australia/Sydney
APP_URL=https://zambezimeats.com.au
APP_LOCALE=en

# ==============================================================================
# Logging Configuration (DEP-020, DEP-021)
# ==============================================================================

LOG_CHANNEL=stack
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=warning

# Sentry Error Monitoring (DEP-021)
SENTRY_LARAVEL_DSN=https://your-sentry-dsn@sentry.io/project-id

# ==============================================================================
# Database Configuration (DEP-006)
# ==============================================================================

DB_CONNECTION=mysql
DB_HOST=127.0.0.1
DB_PORT=3306
DB_DATABASE=my_zambezimeats
DB_USERNAME=zambezi_user
DB_PASSWORD=YOUR_SECURE_DB_PASSWORD_HERE
DB_CHARSET=utf8mb4
DB_COLLATION=utf8mb4_unicode_ci

# ==============================================================================
# Session & Cache Configuration
# ==============================================================================

SESSION_DRIVER=redis
SESSION_LIFETIME=5
SESSION_ENCRYPT=true
SESSION_PATH=/
SESSION_DOMAIN=.zambezimeats.com.au
SESSION_SECURE_COOKIE=true
SESSION_HTTP_ONLY=true
SESSION_SAME_SITE=lax

CACHE_STORE=redis
QUEUE_CONNECTION=redis

# ==============================================================================
# Redis Configuration
# ==============================================================================

REDIS_CLIENT=phpredis
REDIS_HOST=127.0.0.1
REDIS_PASSWORD=null
REDIS_PORT=6379
REDIS_DB=0
REDIS_CACHE_DB=1

# ==============================================================================
# Mail Configuration (CHK-023)
# ==============================================================================

MAIL_MAILER=smtp
MAIL_HOST=smtp.mailgun.org
MAIL_PORT=587
MAIL_USERNAME=postmaster@mg.zambezimeats.com.au
MAIL_PASSWORD=YOUR_MAILGUN_API_KEY_HERE
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS="orders@zambezimeats.com.au"
MAIL_FROM_NAME="${APP_NAME}"

# ==============================================================================
# Payment Gateway Configuration (DEP-019, CHK-020, CHK-021, CHK-022)
# ==============================================================================

# Stripe (Live Mode)
STRIPE_KEY=pk_live_YOUR_STRIPE_PUBLISHABLE_KEY
STRIPE_SECRET=sk_live_YOUR_STRIPE_SECRET_KEY
STRIPE_WEBHOOK_SECRET=whsec_YOUR_WEBHOOK_SECRET

# PayPal (Live Mode)
PAYPAL_MODE=live
PAYPAL_CLIENT_ID=YOUR_PAYPAL_CLIENT_ID
PAYPAL_CLIENT_SECRET=YOUR_PAYPAL_CLIENT_SECRET
PAYPAL_WEBHOOK_ID=YOUR_WEBHOOK_ID

# Afterpay
AFTERPAY_MODE=live
AFTERPAY_MERCHANT_ID=YOUR_AFTERPAY_MERCHANT_ID
AFTERPAY_SECRET_KEY=YOUR_AFTERPAY_SECRET_KEY

# ==============================================================================
# AWS S3 Configuration (for backups and file storage)
# ==============================================================================

AWS_ACCESS_KEY_ID=YOUR_AWS_ACCESS_KEY
AWS_SECRET_ACCESS_KEY=YOUR_AWS_SECRET_KEY
AWS_DEFAULT_REGION=ap-southeast-2
AWS_BUCKET=zambezimeats-assets
AWS_USE_PATH_STYLE_ENDPOINT=false

# ==============================================================================
# Currency API (Exchange Rates)
# ==============================================================================

EXCHANGE_RATE_API_KEY=YOUR_EXCHANGERATE_API_KEY
DEFAULT_CURRENCY=AUD

# ==============================================================================
# Google Services
# ==============================================================================

GOOGLE_MAPS_API_KEY=YOUR_GOOGLE_MAPS_API_KEY
GOOGLE_PLACES_API_KEY=YOUR_GOOGLE_PLACES_API_KEY
GOOGLE_ANALYTICS_ID=G-XXXXXXXXXX

# ==============================================================================
# Business Configuration
# ==============================================================================

BUSINESS_NAME="Zambezi Meats"
BUSINESS_ADDRESS="6/1053 Old Princes Highway, Engadine, NSW 2233"
BUSINESS_PHONE="+61 2 9520 1234"
BUSINESS_EMAIL="info@zambezimeats.com.au"
BUSINESS_ABN="12 345 678 901"

# Minimum order amount (AUD)
MIN_ORDER_AMOUNT=100
FREE_DELIVERY_THRESHOLD=100

# ==============================================================================
# Security Configuration (CHK-018)
# ==============================================================================

# CORS
CORS_ALLOWED_ORIGINS=https://zambezimeats.com.au,https://www.zambezimeats.com.au
CORS_ALLOWED_METHODS=GET,POST,PUT,PATCH,DELETE,OPTIONS
CORS_ALLOWED_HEADERS=Content-Type,Authorization,X-Requested-With,X-CSRF-TOKEN

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60

# Sanctum
SANCTUM_STATEFUL_DOMAINS=zambezimeats.com.au,www.zambezimeats.com.au
SANCTUM_EXPIRATION=5

# ==============================================================================
# Monitoring & Alerts (DEP-022)
# ==============================================================================

# Slack notifications (optional)
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/WEBHOOK/URL

# PagerDuty (optional)
PAGERDUTY_ROUTING_KEY=YOUR_PAGERDUTY_KEY

# ==============================================================================
# Feature Flags
# ==============================================================================

FEATURE_SSE_ENABLED=true
FEATURE_AFTERPAY_ENABLED=true
FEATURE_COD_ENABLED=true
FEATURE_WISHLIST_ENABLED=true

# ==============================================================================
# Performance
# ==============================================================================

# OPcache (ensure enabled in php.ini)
OPCACHE_ENABLE=1

# Response compression
COMPRESS_RESPONSES=true

# ==============================================================================
# Queue Worker Configuration
# ==============================================================================

QUEUE_WORKER_SLEEP=3
QUEUE_WORKER_TRIES=3
QUEUE_WORKER_TIMEOUT=90
