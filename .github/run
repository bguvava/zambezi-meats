cd backend; php artisan cache:clear; php artisan config:clear; php artisan route:clear; php artisan view:clear; php artisan optimize:clear
---
cd ..\frontend; if (Test-Path node_modules) { Remove-Item -Recurse -Force node_modules }; if (Test-Path dist) { Remove-Item -Recurse -Force dist }; if (Test-Path .vite) { Remove-Item -Recurse -Force .vite }; npm install
---
cd ..\backend; php artisan migrate:fresh --seed
---
cd backend; php artisan db:seed --class=ProductSeeder
---
cd ..; (Get-Content database/seeders/data/products_sausages.json) -replace '"category_slug": "beef-sausages"', '"category_slug": "sausages-beef-sausages"' -replace '"category_slug": "pork-sausages"', '"category_slug": "sausages-pork-sausages"' -replace '"category_slug": "gourmet-sausages"', '"category_slug": "sausages-gourmet-sausages"' | Set-Content database/seeders/data/products_sausages.json; php artisan db:seed --class=ProductSeeder
---
cd backend; php artisan serve --host=127.0.0.1 --port=8000
cd frontend; npm run dev

cd C:\xampp\htdocs\Zambezi-Meats\backend; php artisan serve --port=8000

cd C:\xampp\htdocs\Zambezi-Meats\frontend; npm run dev

